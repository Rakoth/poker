<%= link_to_remote(
	image_tag("game/actions/#{action[:name]}.gif", :mouseover => image_path("game/actions/#{action[:name]}_over.gif")),
	:url => actions_path(:game_id => @game.id, :kind => action[:kind]),
	:method => :post,
	:html => {:id => action[:name], :class => "action_button", :style => 'display:none'},
	:with => (action[:value] ? "'value=' + RP_StakeSlider.slider('value')" : ""),
	:before => "$('#actions_veil').show()",
	:complete => "$('#actions_veil').hide()",
	:success => "RP_Client.action(#{action[:kind]}, RP_StakeSlider.slider('value'), parseInt(request))",
	:failure => "alert('#{t 'views.games.show.action_failed'}')"
)%>
