<html>
  <head>
    <title><%= "title" %></title>
    <%= stylesheet_link_tag "style", :media => "all" %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="head"></div>
    <div id="menu"><%= render :partial => "partials/menu" %></div>
    <div id="flash">
      <%- if flash[:error] -%>
        <div class="error"><%= flash[:error] %></div>
      <%- end -%>
      <%- if flash[:notice] -%>
        <div class="notice"><%= flash[:notice] %></div>
      <%- end -%>
    </div>
    <div id="body"><%= yield %></div>
  </body>
</html>